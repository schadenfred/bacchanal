- content_for :graphic do 
  = image_path("rp-1.jpg")
- content_for :brand do 
  = link_to "Bacchan.al", root_path, class: "navbar-brand"
- content_for :navlinks do 
  = render 'application/header/navigation_links'
  = render 'application/header/authentication_links'
.main
  %section.module-small.bg-dark.bg-dark-60{"data-background" => "assets/images/section-4.jpg"}
    .container
      .row
        .col-sm-6.col-sm-offset-3
          %h1.module-title.font-alt
            = yield :devise_action 
  %section.module
    .container
      .row
        .col-sm-6.col-sm-offset-3.mb-sm-40
          %form.form
            = yield :devise_form
= render template: "layouts/application"
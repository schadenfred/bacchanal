!!!
%html{:lang => "en"}
  %head
    = render 'head'
    = yield :head
  %body
    = render 'preloader'
    = yield :header
    .main
      / = render 'messages'
      = content_for?(:main) ? yield(:main) : yield

      %hr.divider-d/
      / = render 'widgets'

      = render 'footer'
      = render 'scroll_up'

    %script{:src => "//maps.google.com/maps/api/js?sensor=true", :type => "text/javascript"} 
    = javascript_include_tag 'application'
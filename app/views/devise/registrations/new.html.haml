- content_for :devise_action do 
  Sign up
- content_for :devise_form do 
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, class: "sr-only"
      = f.email_field :email, autofocus: true, placeholder: "robert@porker.com", class: "form-control"
    
    .text-center
      = f.submit "Sign up", class: "btn btn-block btn-round btn-d"
  = render "devise/shared/links"





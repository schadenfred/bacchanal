- content_for :devise_action do 
  Log in
- content_for :devise_form do 
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group 
      = f.email_field :email, placeholder: "robert@porker.com", autofocus: true, class: auth_field
    .form-group
      = f.password_field :password, placeholder: "password", autocomplete: "off", class: auth_field
    - if devise_mapping.rememberable?
      %br
      = f.check_box :remember_me, { checked: true}
      = f.label :remember_me
    .actions
      = f.submit "Log in", class: auth_btn 

- content_for :devise_action do 
  Sign in
- content_for :devise_form do 
  .jumbotron
    %h2.product-title.font-alt Accessories Pack

    %h2
      We are invitation only at the moment. 
    %p
      = mail_to "fred.schoeneman@gmail.com", "request invitation"
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Sign in", class: auth_btn

= render 'static/latest_articles'

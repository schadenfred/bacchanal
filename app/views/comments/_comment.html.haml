.comment.clearfix{ id: "comment-#{comment.id}"}
  .comment-avatar
    = link_to image_tag("commenter-thumb.jpg")
  .comment-content.clearfix
    .comment-author.font-alt
      = link_to comment.commenter.name
    .comment-body
      %p= comment.content
    .comment-meta.font-alt 
      .col-sm-5
        .comment-age
          = time_ago_in_words(comment.created_at) + " ago."
      .col-sm-7
        .comment-actions.pull-right
          - if policy(@comment).new?
            = link_to "reply", new_comment_path(comment: { parent_id: comment.id }), remote: true
          - if policy(comment).destroy?
            = link_to "delete", comment, method: :delete, id: "delete-comment-#{comment.id}", remote: true
          - if policy(comment).update?
            = link_to "edit", edit_comment_path(comment),  id: "edit-comment-#{comment.id}", remote: true
        .comment-reply-cancel.pull-right{ id: "cancel-reply-#{comment.id}" }
          = link_to "cancel"
        
        
    .comment-reply
    
    .nested-comment

  = nested_comments comment.children


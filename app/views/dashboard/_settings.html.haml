= simple_form_for(@user, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.input :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  = f.input :password, autocomplete: "off"
  = f.input :password_confirmation, autocomplete: "off"
  = f.input :current_password, autocomplete: "off"
  .actions
    = f.button :submit, "Update", class: auth_btn
%hr
%h3 Unhappy?
%p
  Every party needs a pooper.
  = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "No! Please! Don't! Leave!?!" }, method: :delete, class: auth_btn

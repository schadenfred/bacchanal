/ Subscribe start
%section.module-small.bg-dark
  .container
    .row
      .col-sm-6.col-md-6.col-lg-4.col-lg-offset-2
        .callout-text.font-alt
          %h3.callout-title Request your invitation
          
      .col-sm-6.col-md-6.col-lg-4
        .callout-btn-box
          %form#subscription-form{:role => "form"}
            .input-group
              %input#semail.form-control{"data-validation-required-message" => "Please enter your email address.", :name => "semail", :placeholder => "Your Email", :required => "", :type => "email"}/
              %span.input-group-btn
                %button.btn.btn-g.btn-round{:type => "submit"} Submit
          / Ajax response
          #subscription-response.ajax-response
    / .row
/ Subscribe end
%h4.comment-form-title.font-alt Add review
%form{:method => "post"}
  .row
    .col-sm-4
      .form-group
        %label.sr-only{:for => "name"} Name
        %input#name.form-control{:name => "name", :placeholder => "Name", :type => "text"}/
    .col-sm-4
      .form-group
        %label.sr-only{:for => "email"} Name
        %input#email.form-control{:name => "email", :placeholder => "E-mail", :type => "text"}/
    .col-sm-4
      .form-group
        %select.form-control
          %option{:disabled => "disabled", :selected => "true"} Rating
          %option{:value => "1"} 1
          %option{:value => "2"} 2
          %option{:value => "3"} 3
          %option{:value => "4"} 4
          %option{:value => "5"} 5
    .col-sm-12
      .form-group
        %textarea.form-control{:id => "", :name => "", :placeholder => "Review", :rows => "4"}
    .col-sm-12
      %button.btn.btn-round.btn-d{:type => "submit"} Submit Review
/ Review form end
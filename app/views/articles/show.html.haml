          / Comments end
          / Comment form start
          .comment-form
            %h4.comment-form-title.font-alt Add your comment
            %form{:method => "post"}
              .form-group
                %label.sr-only{:for => "name"} Name
                %input#name.form-control{:name => "name", :placeholder => "Name", :type => "text"}/
              .form-group
                %label.sr-only{:for => "email"} Name
                %input#email.form-control{:name => "email", :placeholder => "E-mail", :type => "text"}/
              .form-group
                %textarea#comment.form-control{:name => "comment", :placeholder => "Comment", :rows => "4"}
              %button.btn.btn-round.btn-d{:type => "submit"} Post comment
          / Comment form end


.main
  %section.module-small.bg-dark.bg-dark-30{"data-background" => "assets/images/section-8.jpg"}
    .container
      .row
        .col-sm-6.col-sm-offset-3
          %h1.module-title.font-alt= @bloggable.name
          .module-subtitle.font-serif.mb-0
            = @bloggable.blog_title.titleize
  %section.module
    .container
      .row
        .col-sm-8
          - @articles.each do |article|
            .post
              .post-thumbnail
                = link_to image_tag("post-4.jpg"), poly_path(article)
              .post-header.font-alt
                %h2.post-title
                  = link_to article.title, poly_path(article)
                  .post-meta
                    By
                    = link_to article.author.name, "#"
                    | 
                    = time_ago_in_words(article.created_at) + " ago." 
                    | 
                    = pluralize(article.comments.count, 'comment')
                    | Tags:
                    - article.all_tags_list.each_with_index do |tag, i|
                      = i == 0 ? "" : ","
                      = link_to tag
              .post-entry
                %p= simple_format(truncate(article.content, length: 250))
              .post-more
                = link_to "Read more", poly_path(article), class: "more-link"
          
          .pagination.font-alt
            = paginate @articles
        .col-sm-4.col-md-3.col-md-offset-1.sidebar
          / Widget start
          .widget
            %form{:role => "form"}
              .search-box
                %input.form-control{:placeholder => "Search...", :type => "text"}/
                %button.search-btn{:type => "submit"}
                  %i.fa.fa-search
          / Widget end
          / Widget start
          .widget
            %h5.widget-title.font-alt cloud
            = render partial: "tag_cloud", locals: { tags: @tags }
            / - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| 
            /   = link_to tag.name, :class => css_class
            / - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
            /   = link_to tag.name, { :id => tag.name }, :class => css_class
          .widget
            %h5.widget-title.font-alt Categories
            %ul.icon-list
              - @bloggable.owned_taggings.where(context: "categories").each do |tagging|
                %li
                  = link_to tagging.tag
          / Widget end
          / Widget start
          .widget
            %h5.widget-title.font-alt Popular posts
            %ul.widget-posts
              - @articles.each do |article|
                %li.clearfix
                  .widget-posts-image
                    = link_to image_tag("rp-1.jpg"), "#"
                  .widget-posts-body
                    .widget-posts-title
                      = link_to article.title, poly_path(article)
                    .widget-posts-meta
                      = time_tag article.created_at
          .widget
            %h5.widget-title.font-alt Tags
            .tags.font-serif
              - @bloggable.owned_taggings.where(context: "tags").each do |tagging|
                = link_to tagging.tag
          .widget
            %h5.widget-title.font-alt= "about #{@bloggable.name}"
            = simple_format(@bloggable.mission)
          / Widget start
          .widget
            %h5.widget-title.font-alt Recent Comments
            %ul.icon-list
              - @bloggable.comments.each do |comment|
                %li
                  = comment.commenter.name
                  = link_to comment.commentable.title.titleize, poly_path(comment.commentable)
